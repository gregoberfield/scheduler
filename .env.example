# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_APP=run.py
FLASK_ENV=development

# Database
# SQLite for development (default - uses instance/tbc_scheduler.db)
# Leave commented to use default SQLite path
# DATABASE_URL=sqlite:///instance/tbc_scheduler.db

# PostgreSQL for production or if preferred in development
# DATABASE_URL=postgresql://scheduler_user:password@localhost/tbc_scheduler

# PostgreSQL Connection Pool Settings (only used with PostgreSQL)
# DB_POOL_SIZE=10
# DB_POOL_RECYCLE=3600
# DB_MAX_OVERFLOW=20
# DB_CONNECT_TIMEOUT=10

# Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
